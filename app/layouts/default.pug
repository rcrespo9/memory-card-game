doctype html
html.no-js(lang='en')
  head
    meta(charset='utf-8')

    meta(name='description', content='')

    meta(name='viewport', content='width=device-width, initial-scale=1')

    title TMNT Pairs

    link(rel='apple-touch-icon', href='apple-touch-icon.png')
    // Place favicon.ico in the root directory
    // build:css styles/vendor.css
    // bower:css
    link(rel='stylesheet', href='/bower_components/normalize-css/normalize.css')
    // endbower
    // endbuild
    link(href='https://fonts.googleapis.com/css?family=Press+Start+2P', rel='stylesheet')
    // build:css styles/main.css
    link(rel='stylesheet', href='styles/main.css')
    // endbuild
    // build:js scripts/vendor/modernizr.js
    script(src='/bower_components/modernizr/modernizr.js')
    // endbuild

  body
    <!--[if lt IE 10]>
        p.browserupgrade You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.
    <![endif]-->
    include svg-icons.pug

    - var cardPairsAmt = 2;
    - var characters = ['raphael', 'donatello', 'leonardo', 'michelangelo', 'splinter', 'shredder'];

    main.page-content
      section.cards
        - for (var i = 0; i < cardPairsAmt; i++)
            each character in characters
                .card(data-character=character data-matched='false')
                  .card__container
                    .card__inner
                      figure.card__flipper.card__flipper--front
                        .flipper__inner
                          svg.card__img.card__img--logo
                            use(xlink:href='#tmnt-logo')

                      figure.card__flipper.card__flipper--back= character

